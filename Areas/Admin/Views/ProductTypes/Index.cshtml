@using EShop.Models;
@model IEnumerable<ProductTypes>

<div style="background-color: lightblue; width: 100%; height: 100%; position: absolute; top: 53px; left: 2px;">

    @{ ViewData["Title"] = "Index"; }


    <br />
    <br />
    <div class="row">
        <div class="col-6">
            <h2 class="text-info" style=" text-align: right; padding-right: 0%; ">Product Type List</h2> @*conent-aligh: center*@
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-info" style="margin-right:35%"><i class="fas fa-plus"></i>&nbsp; New Product Type</a>
        </div>
    </div>
    <br />
    <div>
        <table class="table table-striped border" style="width:70%; margin-left:15%">
            <tr class="table-info" style="height:70%">
                <th>
                    @Html.DisplayNameFor(c => c.ProductType)
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
<tr>
    <td>@item.ProductType</td>
    <td>
        <partial name="_ButtonPartial" model="@item.Id" />
    </td>
</tr>}
        </table>
    </div>

</div>