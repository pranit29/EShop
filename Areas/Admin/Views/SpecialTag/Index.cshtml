@using EShop.Models;
@model IEnumerable<SpecialTag>

<div style="background-color: lightblue; width: 100%; height: 100%; position: absolute; top: 53px; left: 2px;">

    @{ ViewData["Title"] = "Index"; }

    <br />
    <br />
    <div class="row" style="background-color: lightblue;">
        <div class="col-6" style="background-color: lightblue;">
            <h2 class="text-info"style="text-align: right; padding-right: 0%;" >Special Tag List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-info" style="margin-right:35%"><i class="fas fa-plus"></i>&nbsp; New Tag Name</a>
        </div>
    </div>
    <br />
    <div>
        <table class="table table-striped border" id="myTable" style="width:70%; margin-left:15%">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(c => c.Name)
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <partial name="_TagPageButtonPartial" model="@item.Id" />
                    </td>
                </tr>
            }
        </table>
    </div>

    </div>
